<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
    <StackLayout>
        <Label text="Tap the button" cssClass="title"/>
    	<Button text="TAP" tap="{{ tapAction }}" />
    	<ActivityIndicator ios:visibility="collapse" android:visibility="visible" ios:busy="false" android:busy="true"/>
    	<Placeholder ios:visibility="visible" android:visibility="collapse" creatingView="creatingView"/>
    	<Label text="{{ message }}" cssClass="message" textWrap="true"/>
	</StackLayout>
</Page>
